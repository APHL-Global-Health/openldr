{
  "name": "@openldr/ai",
  "private": true,
  "version": "1.2.0",
  "scripts": {
    "copy:env": "tsx ../../environments/merge-env.ts ../../environments/.env.base ../../environments/.env.openldr-ai .env",
    "docker:build:off": "npm run copy:env && tsx ./docker-compose.ts build",
    "docker:start:off": "npm run copy:env && tsx ./docker-compose.ts up -d --force-recreate",
    "docker:stop": "npm run copy:env && tsx ./docker-compose.ts stop",
    "docker:reset": "npm run copy:env && tsx ./docker-compose.ts down --rmi all -v --remove-orphans && rimraf ./.env"
  },
  "devDependencies": {
    "@openldr/mcp-server": "*", 
    "@repo/openldr-core":"*"   ,
    "@types/node": "^24.2.0",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "eslint": "^9.39.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.56.0"
  }
}
