{
  "name": "@openldr/entity-services",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "copy:env": "tsx ../../environments/merge-env.ts ../../environments/.env.base ../../environments/.env.openldr-entity-services ../../environments/.env.openldr-data-processing ../../environments/.env.openldr-minio ../../environments/.env.openldr-keycloak ../../environments/.env.openldr-openconceptlab ../../environments/.env.openldr-postgres ../../environments/.env.openldr-opensearch ../../environments/.env.openldr-studio-vite .env",
    "docker:build": "npm run copy:env && tsx ./docker-compose.ts build",
    "docker:start": "npm run copy:env && tsx ./docker-compose.ts up -d --force-recreate",
    "docker:stop": "npm run copy:env && tsx ./docker-compose.ts stop",
    "docker:reset": "npm run copy:env && tsx ./docker-compose.ts down --rmi all -v --remove-orphans",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "start": "cross-env NODE_ENV=production tsx watch src/index.ts"
  },
  "dependencies": {
    "@repo/openldr-core": "*",
    "@aws-sdk/client-s3": "^3.995.0",
    "@aws-sdk/lib-storage": "^3.995.0",
    "@opensearch-project/opensearch": "^3.5.1",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.5",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonschema": "^1.5.0",
    "minio": "*",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.18.0",
    "pg-pool": "^3.11.0",
    "pino": "^10.3.1",
    "semver": "^6.3.1",
    "unzipper": "^0.12.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@openldr/extensions": "*",
    "@openldr/external-database": "*",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/adm-zip": "^0.5.7",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.2",
    "@types/pg": "^8.16.0",
    "@types/semver": "^7.7.1",
    "@types/unzipper": "^0.10.11",
    "eslint": "^9.39.2",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.56.0"
  }
}
