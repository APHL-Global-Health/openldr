{
  "name": "@openldr/entity-services",
  "version": "1.2.0",
  "description": "OpenLDR entity services - manages data access rules and core entity CRUD operations",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "copy:env": "cpy ../../.env.microservices . --rename=.env",
    "docker:build": "npm run copy:env && tsx ./docker-compose.ts build",
    "docker:start": "npm run copy:env && tsx ./docker-compose.ts up -d",
    "docker:stop": "npm run copy:env && tsx ./docker-compose.ts stop",
    "docker:reset": "tsx ./docker-compose.ts -f docker-compose.yml down --rmi all -v --remove-orphans && npm run stop:services && rimraf ./.env",
    "setup:services": "ts-node openldr.ts setup",
    "reset:services": "ts-node openldr.ts reset",
    "stop:services": "ts-node openldr.ts stop",
    "start:services": "ts-node openldr.ts start",
    "start": "ts-node src/index.ts"
  },
  "author": "Association of Public Health Laboratories (APHL)",
  "license": "Apache-2.0",
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^26.3.2",
    "@openldr/external-storage": "*",
    "@openldr/internal-database": "*",
    "@opensearch-project/opensearch": "^3.5.1",
    "@repo/openldr-core": "*",
    "@sequelize/core": "^7.0.0-alpha.42",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "fs-extra": "^11.3.2",
    "js-yaml": "^4.1.1",
    "jsonschema": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "keycloak-js": "^26.2.1",
    "minio": "^8.0.2",
    "multer": "^1.4.5-lts.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "unzipper": "^0.12.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.7.0",
    "@types/semver": "^7.7.1",
    "@types/unzipper": "^0.10.11",
    "@types/uuid": "^10.0.0",
    "ts-node": "^10.9.2"
  }
}
