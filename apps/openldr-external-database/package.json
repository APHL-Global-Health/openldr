{
  "name": "@openldr/external-database",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "copy:env": "tsx ../../environments/merge-env.ts ../../environments/.env.base ../../environments/.env.openldr-external-database ../../environments/.env.openldr-postgres .env",
    "docker:build": "npm run copy:env && tsx ./docker-compose.ts build",
    "docker:start": "npm run copy:env && tsx ./docker-compose.ts up -d --force-recreate",
    "docker:stop": "npm run copy:env && tsx ./docker-compose.ts stop",
    "docker:reset": "npm run copy:env && tsx ./docker-compose.ts down --rmi all -v --remove-orphans",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "start": "cross-env NODE_ENV=production tsx watch src/index.ts"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "minio": "*",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.18.0",
    "pg-pool": "^3.11.0",
    "pino": "^10.3.1"
  },
  "devDependencies": {
    "@openldr/minio": "*",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.2",
    "@types/pg": "^8.16.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.7.0",
    "eslint": "^9.39.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.56.0"
    
  }
}
