{
  "name": "@openldr/gateway",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "copy:env": "tsx ../../environments/merge-env.ts ../../environments/.env.base ../../environments/.env.openldr-entity-services ../../environments/.env.openldr-data-processing ../../environments/.env.openldr-external-database ../../environments/.env.openldr-minio ../../environments/.env.openldr-keycloak ../../environments/.env.openldr-postgres ../../environments/.env.openldr-pgadmin ../../environments/.env.openldr-opensearch ../../environments/.env.openldr-kafka ../../environments/.env.openldr-studio ../../environments/.env.openldr-ai ../../environments/.env.openldr-web .env",
    "docker:build": "npm run copy:env && tsx ./docker-compose.ts pull",
    "docker:start": "npm run copy:env && tsx ./docker-compose.ts up -d --force-recreate",
    "docker:stop": "npm run copy:env && tsx ./docker-compose.ts stop",
    "docker:reset": "npm run copy:env && tsx ./docker-compose.ts down --rmi all -v --remove-orphans"    
  },
  "devDependencies": {
    "@openldr/internal-database": "*",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/express": "^4.17.21",
    "@types/node": "^25.2.2",
    "tsx": "^4.7.0",
    "eslint": "^9.39.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.56.0"
    
  }
}
