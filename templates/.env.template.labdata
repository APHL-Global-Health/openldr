# OpenLDR Lab Data Environment Configuration
# Copy this file to .env and update values as needed

# Container Restrictions
CPU_LIMIT=0
MEMORY_LIMIT=512M
MEMORY_RESERVATIONS=128M
MEMSWAP_LIMIT=1G

# Database Configuration
POSTGRES_DB=openldr_external
POSTGRES_USER=openldr
POSTGRES_PASSWORD=openldr123
POSTGRES_PORT=5432
POSTGRES_HOSTNAME=openldr-db-postgres

# API Configuration
API_PORT=3009
API_SECRET_KEY=my-secret-key

# Docker Network Configuration
DOCKER_NETWORK_NAME=openldr-network
DOCKER_NETWORK_DRIVER=bridge

# Data Retention Configuration
DATA_RETENTION_YEARS=7

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_ENABLED=true

# Performance Configuration
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=4MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB

# Logging Configuration
POSTGRES_LOG_STATEMENT=all
POSTGRES_LOG_MIN_DURATION_STATEMENT=1000

# API Security Configuration
API_RATE_LIMIT=0
API_TIMEOUT=30s
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

COMPOSE_PROJECT_NAME=openldr-test
NODE_TLS_REJECT_UNAUTHORIZED=0
