{
  "name": "openldr-v2",
  "private": true,
  "scripts": {
    "init": "tsx ./apps/openldr-setup/openldr.ts init",
    "setup:services": "turbo run setup:services",
    "reset:services": "turbo run reset:services",
    "stop:services": "turbo run stop:services",
    "start:services": "turbo run start:services",
    "docker:build:parallel": "turbo run docker:build --parallel --force",
    "docker:build:force": "turbo run docker:build --force",
    "docker:build": "turbo run docker:build",
    "docker:start": "turbo run docker:start --force",
    "docker:stop": "turbo run docker:stop --force",
    "docker:reset": "turbo run docker:reset --force",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
