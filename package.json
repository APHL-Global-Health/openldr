    "@rollup/rollup-linux-x64-gnu": "4.59.0"
  },
  "overrides": {
    "minimatch": "^3.1.3",
    "serve-handler": {
      "minimatch": "^3.1.3"
    },
    "fast-xml-parser": ">=5.3.8",
    "serialize-javascript": ">=7.0.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
